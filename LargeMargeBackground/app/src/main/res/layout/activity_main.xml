<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background_root"
    android:layout_width="800dp"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/signpost_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:layout_gravity="right"
        android:paddingLeft="24dp"
        android:paddingRight="88dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textSize="40sp"
        android:background="@drawable/sign"
        fontPath="fonts/NotoSerif-Regular.ttf"
        tools:text= "Atlanta, Georgia"
        tools:ignore="MissingPrefix"/>


    <LinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:foreground="@drawable/curtain_foreground">

        <ImageView
            android:id="@+id/curtain_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/curtain_left"/>

        <ImageView
            android:id="@+id/curtain_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/curtain_right"/>

    </LinearLayout>
</FrameLayout>